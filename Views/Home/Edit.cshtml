@model WebPets.Models.Pets

@{ ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DonoNome" class="control-label"></label>
                <input asp-for="DonoNome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TipoDePet" class="control-label"></label>
                <input asp-for="TipoDePet" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary mt-2" />
            </div>
        </form>
    </div>
</div>
